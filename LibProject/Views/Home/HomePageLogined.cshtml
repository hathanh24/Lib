@{
    Layout = null;
}
<!doctype html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <title>Trang Chủ</title>
</head>

<body>
    <nav id="nav" class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Quản lý sách</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="#">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <span id="QLS" class="nav-link" onclick="QLS();" >Quản lý sách</span>
                    </li>
                    <li class="nav-item">
                        <span id="TTV" class="nav-link" onclick="TTV();">Thẻ thư viện</span>
                    </li>
                    <li class="nav-item">
                        <span id="QLNDD" class="nav-link" onclick="QLND();">Quản lý người dùng</span>
                    </li>
                </ul>
            </div>
            <span class="nav-link ms-auto text-white" onclick=' window.location.href="/HomePage";'>Đăng Xuất</span>

        </div>
    </nav>

    @* QLS SECTION *@
    <div id="QLS-Container" class="container " style="margin-top: 70px">
        <button type="button" class="btn btn-primary add-book" data-bs-toggle="modal" data-bs-target="#myModal">
            Thêm sách
        </button>
        <div class="modal" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Quản lý sách</h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <form id="AddForm">
                            <div class="mb-3">
                                <label>Tên sách</label>
                                <input type="text" class="form-control" name="name" required>
                            </div>
                            <div class="mb-3">
                                <label>Tác giả</label>
                                <input type="text" class="form-control" name="author" required>
                            </div>
                            <div class="mb-3">
                                <label>Nhà xuất bản</label>
                                <input type="text" class="form-control" name="publisher" required>
                            </div>
                            <div class="mb-3">
                                <label>Số lượng</label>
                                <input type="text" class="form-control" name="amount" required>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" onclick="AddSach();" class="create btn btn-primary" data-bs-dismiss="modal">Submit</button>
                        <button type="button" class="close btn btn-danger" data-bs-dismiss="modal">Close</button>
                    </div>

                </div>
            </div>
        </div>

        <table class="table table-bordered mt-3">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Tên sách</th>
                    <th scope="col">Tác giả</th>
                    <th scope="col">Nhà xuất bản</th>
                    <th scope="col">Số lượng</th>
                    <th scope="col">Tùy chỉnh</th>
                </tr>
            </thead>
            <tbody id="list-books">
            </tbody>
        </table>
    </div>
    @* QLS SECTION *@


    @* THE THU VIEN SECTION *@
    <div id="TTV-Form" class="container" style="margin-top: 70px">
        <form id="myForm">
            <div class="mb-3">
                <label for="fullName" class="form-label">Họ và tên</label>
                <input type="text" class="form-control" id="fullName" name="hoVaTen" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
                <label for="phone" class="form-label">Số điện thoại</label>
                <input type="tel" class="form-control" id="phone" name="soDienThoai" required>
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Địa chỉ</label>
                <input type="text" class="form-control" id="address" name="diaChi" required>
            </div>
            <div class="mb-3">
                <label for="dob" class="form-label">Ngày sinh</label>
                <input type="date" class="form-control" id="dob" name="ngaySinh" required>
            </div>
            <div class="mb-3">
                <label for="gender" class="form-label">Giới tính</label>
                <select class="form-select" id="gender" name="gioiTinh" required>
                    <option value="Không xác định">Chọn giới tính</option>
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                </select>
            </div>
            <button type="submit" id="Dang-Ky-Btn" class="btn btn-primary create">Đăng ký</button>
        </form>
    </div>
    @* THE THU VIEN SECTION *@


    @* QUAN LY NGUOI DUNG SECTION *@
    <div id="QLND" class="container" style="margin-top: 70px">
        <table class="table table-bordered mt-3">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Họ và tên</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Địa chỉ</th>
                    <th>Ngày sinh</th>
                    <th>Giới tính</th>
                    <th>Tùy Chỉnh</th>
                </tr>
            </thead>
            <tbody id="QLND-body"></tbody>
        </table>
    </div>
    @* QUAN LY NGUOI DUNG SECTION *@
</body>

</html>
<style>
    span:hover {
        cursor: pointer;
        opacity: 0.8;
    }
    img {
        width: 100vw;
        height: 100vh;
    }

    #nav {
        position: fixed;
        right: 0;
        left: 0;
        top: 0;
    }
</style>
<script>
    window.onload = function () {
        $("#QLS-Container").hide();
        $("#TTV-Form").hide();
        $("#QLND").hide();

    }
     function GetSach() {
        $("#list-books").html("");
         $.ajax({
                url: "api/Library/GetSach",
                type: "GET",
                // contentType: "application/json",
                success: function (respondata) { 
                    var content = ``;
                    respondata.forEach(function (item, index) {
                        content += `<tr>
                            <th scope='col'>`+ Number(index + 1) + `</th>
                            <th scope='col'>`+ item["tenSach"] + `</th>
                            <th scope='col'>`+ item["tacGia"] + `</th>
                            <th scope='col'>`+ item["nhaXuatBan"] + `</th>
                            <th scope='col'>`+ item["soLuong"] + `</th>
                            <th scope='col'>
                                <button type='button' onclick='XoaSach(`+item["id"]+`)' class='close btn btn-danger' data-bs-dismiss='modal'>Xóa</button>
                            </th>
                        </tr>`
                    });
                    $("#list-books").append(content);
                },
                error: function (e) { }
        });
    }
    function QLS() {
        if ($("#QLS-Container").css('display') == 'none') {
            GetSach();
            $("#QLS-Container").show();
            $("#QLS").addClass("active");

            $("#TTV-Form").hide();
            $("#TTV").removeClass("active");
             
            $("#QLND").hide();
            $("#QLNDD").removeClass("active");

            $("#TTV-Form").hide();
            $("#TTV").removeClass("active");
        } else {
            $("#QLS-Container").hide();
            $("#QLS").removeClass("active");
        }
    }
    function QLND() {
        if ($("#QLND").css('display') == 'none') {
            GetNguoiDung();
            $("#QLND").show();
            $("#QLNDD").addClass("active");

            $("#QLS-Container").hide();
            $("#QLS").removeClass("active");

            $("#TTV-Form").hide();
            $("#TTV").removeClass("active");
        } else {
            $("#QLND").hide();
            $("#QLNDD").removeClass("active");
        }
    }

    function TTV() {
        if ($("#TTV-Form").css('display') == 'none') {
            GetSach();
            $("#TTV-Form").show();
            $("#TTV").addClass("active");

            $("#QLS-Container").hide();
            $("#QLS").removeClass("active");

            $("#QLND").hide();
            $("#QLNDD").removeClass("active");
        } else {
            $("#TTV-Form").hide();
            $("#TTV").removeClass("active");
        }
    }
    function XoaSach(id) {
        Swal.fire({
            title: "Chắc chắn xóa?",
            showCancelButton: true,
            confirmButtonText: "Xóa",
        }).then((result) => {
            /* Read more about isConfirmed, isDenied below */
            if (result.isConfirmed) {
                $.ajax({
                    url: "api/Library/DeleteSach/" + id,
                    type: "POST",
                    contentType: "application/json",
                    success: function () {
                        GetSach();
                    },
                    error: function (e) { }
                });
            } else if (result.isDenied) {
            }
        });
       
    }
    $("#Dang-Ky-Btn").click(
        function AddTheThuVien(event) {
            event.preventDefault();
            var hoVaTen = $("input[name='hoVaTen']").val();
            var email = $("input[name='email']").val();
            var soDienThoai = $("input[name='soDienThoai']").val();
            var diaChi = $("input[name='diaChi']").val();
            var ngaySinh = $("input[name='ngaySinh']").val();
            var gioiTinh = $("#gender").val();
            var newTTV = {
                "hoVaTen": "" + hoVaTen + "",
                "email": "" + email + "",
                "soDienThoai": "" + soDienThoai + "",
                "diaChi": "" + diaChi + "",
                "ngaySinh": "" + ngaySinh + "",
                "gioiTinh": "" + gioiTinh + ""

            }
            $.ajax({
                url: "api/Library/AddTTV",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(newTTV),
                success: function (respondata) {
                    Swal.fire("Đăng ký thẻ thư viện thành công!");
                },
                error: function (e) { }
            });
        }
    );
   

    function AddSach() {
        var tenSach = $("input[name='name']").val();
        var tacGia = $("input[name='author']").val();
        var nhaXuatBan = $("input[name='publisher']").val();
        var soLuong = $("input[name='amount']").val();
        var newSach = {
            "tenSach": "" + tenSach + "",
            "tacGia": "" + tacGia + "",
            "nhaXuatBan": "" + nhaXuatBan + "",
            "soLuong": "" + soLuong + ""
        };
        console.log(newSach);
        $.ajax({
            url: "api/Library/AddSach",
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify(newSach),
            success: function (respondata) {
                $("#AddForm")[0].reset();
                GetSach();
            },
            error: function (e) { }
        });

    }

    function GetNguoiDung() {
        $("#QLND-body").html("");
        $.ajax({
            url: "api/Library/GetTTV",
            type: "GET",
            // contentType: "application/json",
            success: function (respondata) {
                var content = ``;
                respondata.forEach(function (item, index) {
                    content += `<tr>
                                <th scope='col'>`+ Number(index + 1) + `</th>
                                <th scope='col'>`+ item["hoVaTen"] + `</th>
                                <th scope='col'>`+ item["email"] + `</th>
                                <th scope='col'>`+ item["soDienThoai"] + `</th>
                                <th scope='col'>`+ item["diaChi"] + `</th>
                                <th scope='col'>`+ item["ngaySinh"] + `</th>
                                <th scope='col'>`+ item["gioiTinh"] + `</th>
                                <th scope='col'>
                                        <button type='button' onclick='XoaTTV(`+ item["id"] + `)' class='close btn btn-danger' data-bs-dismiss='modal'>Xóa</button>
                                </th>
                            </tr>`
                });
                $("#QLND-body").append(content);
            },
            error: function (e) { }
        });
    }
    function XoaTTV(id) {
        Swal.fire({
            title: "Chắc chắn xóa?",
            showCancelButton: true,
            confirmButtonText: "Xóa",
        }).then((result) => {
            /* Read more about isConfirmed, isDenied below */
            if (result.isConfirmed) {
                $.ajax({
                    url: "api/Library/DeleteTTV/" + id,
                    type: "POST",
                    contentType: "application/json",
                    success: function () {
                        GetNguoiDung()
                    },
                    error: function (e) { }
                });
            } else if (result.isDenied) {
            }
        });
    }
</script>